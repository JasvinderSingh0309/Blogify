<%- include("./partials/header.ejs") -%>

<div class="d-flex align-items-center justify-content-center py-4 bg-body-dark logInHeight">
  <main class="col-11 col-md-7 m-auto">
    <form action="/<%= route%>" method="post">
      <h1 class="h3 mb-3 fw-normal text-light fs-1 text-decoration-underline">Update blog</h1>

      <input type="hidden" name="user_id" value="<%= id%>">
      <input type="hidden" name="blog_id" value="<%= blog.id%>">

      <div class="mb-3">
        <label class="form-label text-light fs-4">Title</label>
        <input type="text" name="title" value="<%= blog.title%>" class="form-control" placeholder="Write title...." required>
      </div>

      <div class="mb-3">
        <label for="exampleFormControlTextarea1" class="form-label text-light fs-4">Blog</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" placeholder="Write blog...." rows="5" name="blog" required><%= blog.blog%></textarea>
      </div>

      <div class="d-flex w-100 justify-content-center">
        <button class="btn btn-primary py-2 my-4" type="submit">Add</button>
      </div>

    </form>
  </main>
</div>

<%- include("./partials/footer.ejs") -%>